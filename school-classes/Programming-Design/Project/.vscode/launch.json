{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Typing Game",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/typingGame.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "CHCP",
          "value": "65001"
        }
      ],
      "externalConsole": true,  // 이걸로 외부 콘솔 실행
      "internalConsoleOptions": "neverOpen",
      "MIMode": "gdb",
      "miDebuggerPath": "C:/mingw64/bin/gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
