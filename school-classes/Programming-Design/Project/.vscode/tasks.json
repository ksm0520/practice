{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build typing game",
      "type": "shell",
      "command": "gcc",
      "args": [
        "src/main.c",
        "src/menu.c",
        "src/sentence.c",
        "src/typing.c",
        "src/score.c",
        "src/storage.c",
        "src/utils.c",
        "-Iinclude",
        "-o",
        "bin/typingGame.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "run typing game",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "chcp 65001 && .\\bin\\typingGame.exe"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}
